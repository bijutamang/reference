
@{
    ViewData["Title"] = "Index";
}

<h1>Air Plane Tickets</h1>

<div class="container p-4">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tickets</h2>
        </div>

        <div class="col-6 text-end" >
            <a class="btn btn-primary" asp-action="Create" asp-controller="AirPlaneTickets">
                Book Tickets
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <td>
                Passanger Name
            </td>
            
            <td>
                Set Number
            </td>

            <td>
                Flight Date
            </td>
        </tr>
    </thead>

    <tbody>
        @foreach (var tek in Model)
        {
            <tr>
                <td>
                    @tek.CName
                </td>
                
                <td>
                    @tek.SetNumber
                </td>
                
                <td>
                    @tek.FliDate
                </td>

            </tr>
        }
    </tbody>
</table>

</table>

